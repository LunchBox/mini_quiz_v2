
<%= simple_form_for([@quiz, @question]) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <div class="form-inputs">
    <%= f.input :subject %>
    <%= f.input :score %>
    <%= f.input :fixed_options %>
    <%= f.input :desc, input_html: {data: {controller: "textarea-autogrow"}} %>
    <%= f.input :batch_options, as: :text, input_html: {data: {controller: "textarea-autogrow"}} %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
