

<% if @attempt.new_record? %>
  <%= render "form_pre_notice" %>
<% elsif @quiz.step_by_step %>

  <div class="flex flex-wrap">
    <% @attempt.attempt_answers.each_with_index do |aa, i| %>
      <%= link_to i + 1, [:edit, @attempt, s: i], class: "btn #{'bg-green-400' if aa.has_answer?}" %>
    <% end %>
  </div>

  <%= render "form_step" %>
<% else %>
  <%= render "form_single_form" %>
<% end %>


