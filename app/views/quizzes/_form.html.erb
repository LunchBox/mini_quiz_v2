<%= simple_form_for quiz, html: { class: "" } do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <%= f.input :title %>
  <%= f.input :desc %>
  <%= f.input :pre_notice %>
  <%= f.input :calc_type, collection: Quiz::CALC_TYPES %>
  <%= f.input :random_questions %>
  <%= f.input :random_options %>
  <%= f.input :available %>


  <div class="ingredient__actions">
    <%= f.submit class: "btn btn--secondary" %>
    <%= link_to t("Cancel"),  :quizzes, class: "btn btn--light" %>
  </div>

<% end %>
